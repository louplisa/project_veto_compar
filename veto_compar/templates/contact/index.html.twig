{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}

<div class="container">
    <div class="d-flex justify-content-center"><h1 class="text-success">Formulaire de contact</h1></div>
    <div class="input-group mb-3">
        {{ form_errors(contact_form) }}
    </div>
    {{ form_start(contact_form) }}
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        {{ form_widget(contact_form.email) }}
    </div>
    <div class="input-group mb-3">
        {{ form_widget(contact_form.name) }}
    </div>
    <div class="input-group mb-3">
        {{ form_widget(contact_form.message) }}
    </div>
    <div class="input-group mb-3">
        {{ form_widget(contact_form.submit) }}
    </div>
    {{ form_end(contact_form) }}
</div>
{% endblock %}
