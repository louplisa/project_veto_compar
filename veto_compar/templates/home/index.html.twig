{% extends 'base.html.twig' %}

{% block title %}VetoCompar{% endblock %}

{% block body %}

    <div class="container mb-3">
        <div class="d-flex justify-content-center"><h1 class="text-success">VetoCompar</h1></div>
    </div>
    <div class="container text-center">
        <div class="row">
            {% for veterinary_clinic in veterinary_clinics %}
                <div class="col-lg-3 col-sm-3 d-flex align-items-stretch">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ veterinary_clinic.name }}</h5>
                            <p class="card-text" style="height: 5rem">{{ veterinary_clinic.address }}</p>
                            <a href="{{ path('app_veterinary_clinic_show', {'id': veterinary_clinic.id}) }}" class="btn btn-primary">Voir la clinique</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
